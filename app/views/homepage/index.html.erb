<% flash.each do |type, msg| %>
  <div class="warning">
    <%= msg %>
  </div>
<% end %>

<%= form_with url: root_path, local: true, method: "get", class: "flickr-search" do |f| %>
  <h1>Search Flickr</h1>
  <%= f.text_field :user_id %><br><br>
  <%= f.submit 'Submit' %>
<% end %>

<% if @photos %>
  <div class="photo-stream">
    <% @photos.each do |photo| %>
      <img src=<%= Flickr.url(photo) %> ><br>
    <% end %>
  </div>
<% end %>